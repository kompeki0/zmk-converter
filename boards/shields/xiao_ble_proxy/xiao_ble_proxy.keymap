#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        /*
         * Layer 0: actual remap layer.
         * Keep as &none and override positions you want.
         */
        default_layer {
            bindings = <
                /* 0..15: ESC, F1..F12, PSCR, SLCK, PAUSE */
                &none &none &none &none &none &none &none &none &none &none &none &none &none &none &none &none

                /* 16..29: `, 1..0, -, =, BSPC */
                &none &none &none &none &none &none &none &none &none &none &none &none &none &none

                /* 30..43: TAB, Q..P, [, ], \ */
                &none &none &none &none &none &none &none &none &none &none &none &none &none &none

                /* 44..56: CAPS, A..L, ;, ', ENTER */
                &none &bt BT_SEL 0 &bt BT_CLR &none &none &none &none &none &none &none &none &none &none

                /* 57..68: LSHIFT, Z.. /, RSHIFT */
                &none &none &none &none &none &none &none &none &none &none &none &none

                /* 69..76: LCTRL, LGUI, LALT, SPACE, RALT, RGUI, APP, RCTRL */
                &none &none &none &none &none &none &none &none

                /* 77..86: INS, HOME, PGUP, DEL, END, PGDN, UP, LEFT, DOWN, RIGHT */
                &none &none &none &none &none &none &none &none &none &none

                /* 87..103: numpad cluster */
                &none &none &none &none &none &none &none &none &none &none &none &none &none &none &none &none &none
            >;
        };

        /*
         * Layer 1: reference layer using &kp defaults aligned to usage_order[].
         * Not auto-selected; this is for easier visual editing/copy.
         */
        reference_layer {
            bindings = <
                /* 0..15 */
                &kp ESC   &kp F1    &kp F2    &kp F3    &kp F4    &kp F5    &kp F6    &kp F7
                &kp F8    &kp F9    &kp F10   &kp F11   &kp F12   &kp PRINTSCREEN &kp SCROLLLOCK &kp PAUSE_BREAK

                /* 16..29 */
                &kp GRAVE &kp N1    &kp N2    &kp N3    &kp N4    &kp N5    &kp N6    &kp N7
                &kp N8    &kp N9    &kp N0    &kp MINUS &kp EQUAL &kp BSPC

                /* 30..43 */
                &kp TAB   &kp Q     &kp W     &kp E     &kp R     &kp T     &kp Y     &kp U
                &kp I     &kp O     &kp P     &kp LBKT  &kp RBKT  &kp BSLH

                /* 44..56 */
                &kp CAPS  &kp A     &kp S     &kp D     &kp F     &kp G     &kp H     &kp J
                &kp K     &kp L     &kp SEMI  &kp SQT   &kp RET

                /* 57..68 */
                &kp LSHFT &kp Z     &kp X     &kp C     &kp V     &kp B     &kp N     &kp M
                &kp COMMA &kp DOT   &kp FSLH  &kp RSHFT

                /* 69..76 */
                &kp LCTRL &kp LGUI  &kp LALT  &kp SPACE &kp RALT  &kp RGUI  &none     &kp RCTRL

                /* 77..86 */
                &kp INS   &kp HOME  &kp PG_UP &kp DEL   &kp END   &kp PG_DN &kp UP    &kp LEFT
                &kp DOWN  &kp RIGHT

                /* 87..103 */
                &kp KP_NUM   &kp KP_DIVIDE &kp KP_MULTIPLY &kp KP_MINUS
                &kp KP_N7    &kp KP_N8     &kp KP_N9       &kp KP_PLUS
                &kp KP_N4    &kp KP_N5     &kp KP_N6
                &kp KP_N1    &kp KP_N2     &kp KP_N3       &kp KP_ENTER
                &kp KP_N0    &kp KP_DOT
            >;
        };
    };
};
